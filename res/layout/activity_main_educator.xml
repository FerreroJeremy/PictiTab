<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:background="#c6ecfc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_padding_top" >

    <Button
        android:id="@+id/selectChildAdministration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/layout_padding_top"
        android:layout_weight="0.50"
        android:background="@color/DARK_GREY"
        android:text="@string/children_profiles_manager"
        android:textColor="#c6ecfc"
        android:textColorHint="#c6ecfc"
        android:textSize="30sp" />

    <Button
        android:id="@+id/selectLexiconAdministration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/normal_padding"
        android:layout_weight="0.50"
        android:background="@color/DARK_GREY"
        android:text="@string/lexicon_manager"
        android:textColor="#c6ecfc"
        android:textColorHint="#c6ecfc"
        android:textSize="30sp" />

    <Button
        android:id="@+id/selectGrammarAdministration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/normal_padding"
        android:layout_weight="0.50"
        android:background="@color/DARK_GREY"
        android:text="@string/grammars_manager"
        android:textColor="#c6ecfc"
        android:textColorHint="#c6ecfc"
        android:textSize="30sp" />

    <Button
        android:id="@+id/selectCategoryAdministration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/normal_padding"
        android:layout_weight="0.50"
        android:background="@color/DARK_GREY"
        android:text="@string/categories_manager"
        android:textColor="#c6ecfc"
        android:textColorHint="#c6ecfc"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="UselessLeaf" >
    </LinearLayout>

</LinearLayout>